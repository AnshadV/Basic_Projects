<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:id="@+id/BinaryInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"

                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toStartOf="@id/ConvertButton"
                android:hint="Enter the Binary Number"
                android:inputType="number" />

            <Button
                android:id="@+id/ConvertButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Convert"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/DecimalOutputCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ConvertButton"
                android:text="Decimal Output"
                android:textStyle="bold"
                android:textSize="20dp"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/DecimalOutput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/DecimalOutputCaption"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="18dp"
                android:visibility="gone"/>
                android:text="0" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>